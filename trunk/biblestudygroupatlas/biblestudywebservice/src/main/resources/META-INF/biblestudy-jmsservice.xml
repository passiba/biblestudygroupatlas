<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jee="http://www.springframework.org/schema/jee"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd 
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
            
   <tx:annotation-driven transaction-manager="transactionManager"/>
   
   <import resource="classpath:META-INF/biblestudy-webservice.xml"/>
  <!--JMS Messaging specific beans -->
  
  <bean id="jmsConntectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory"/>
  
  <bean id="biblebookDataDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="biblestudy.bookdatastorage.queue" />
  </bean>
  <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
      <property name="connectionFactory" ref="jmsConntectionFactory" />
      <property name="defaultDestination" ref="biblebookDataDestination"/>
  </bean>
  <!--handles converting messages from MapMessages to java objects -->
  <bean id="bibleBookDataConverter" class="fi.passiba.biblestudy.services.datamining.dataconverter.BibleBookDataMessageConverter"/>
  
  <!--JMS Queuew listner specific beans that hadle the listening recieving of messages from JMS queue -->
  <bean class="org.springframework.jms.listener.SimpleMessageListenerContainer">
      
      
      <property name="connectionFactory" ref="jmsConntectionFactory"/>
      <property name="destination" ref="biblebookDataDestination"/>
      <property name="messageListener" ref="bibleBookDataListner"/>
  </bean>
  
  <bean id="bibleBookDataListner" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
        <property name="delegate" ref="IBibleDataMining"/>
        <property name="defaultListenerMethod" value="addBookDatasource"/>
        <property name="messageConverter" ref="bibleBookDataConverter"/>
  </bean>
</beans>